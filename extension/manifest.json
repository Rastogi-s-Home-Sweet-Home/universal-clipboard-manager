{
  "manifest_version": 3,
  "name": "Universal Clipboard",
  "version": "1.0",
  "description": "Sync clipboard across devices",
  "permissions": [
    "storage",
    "clipboardRead",
    "clipboardWrite",
    "activeTab",
    "notifications",
    "webRequest",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "ws://localhost:3000/*",
    "http://localhost:3000/*",
    "http://localhost:3006/*",
    "https://*.supabase.co/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost:3006/*",
        "http://localhost:3000/*",
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ]
}