  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.2",
    "ws": "^7.4.6"
  },
  "devDependencies": {
    "concurrently": "^6.5.1",
    "dotenv": "^16.4.5",
    "nodemon": "^2.0.22"
  }
}
